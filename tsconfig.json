{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { 
            "*": ["types/*", "src/*"],
        },
        "rootDir": ".",
        "outDir": "dist",
        "sourceMap": false,
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es6",
        "declaration": true,
        "composite": true,
        "types": ["node", "countdown", "ava"],
    },
    "include": [
    ],
    "references": [
        { "path": "src" }
    ]
}