{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { 
            "*": ["types/*", "src/*"],
        },
        "outDir": "./dist/",
        "sourceMap": false,
        "strict": true,
        "removeComments": true,
        "noImplicitAny": true,
        "module": "es2015",
        "target": "es6",
        "declaration": true,
        "types": ["node", "countdown"]
    },
    "include": [
        "src/**/*"
    ]
}